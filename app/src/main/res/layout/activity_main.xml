<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blt_paired_tv"
        android:text="Bluetooth Paired"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rc_view_blt_paired"
        android:layout_below="@+id/blt_paired_tv"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blt_connected_tv"
        android:layout_below="@+id/rc_view_blt_paired"
        android:text="Bluetooth Connected"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blt_connected_devices"
        android:layout_below="@id/blt_connected_tv"
        android:text="Đang dò thiết bị . . ."
        android:layout_centerHorizontal="true"/>
</RelativeLayout>